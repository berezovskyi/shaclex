@prefix rdf: 	<http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: 	<http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: 	<http://www.w3.org/ns/shacl#> .
@prefix xsd: 	<http://www.w3.org/2001/XMLSchema#> .
@prefix ex: 	<http://example.org/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .


ex:IssueShape
	a sh:NodeShape ;
	sh:targetClass ex:Issue;
	sh:property [
		sh:path ex:state ;
		sh:in (ex:unassigned ex:assigned) ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
	] ;
	sh:property [
		sh:path ex:reportedBy ;
		sh:node ex:UserShape ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
	] .

ex:UserShape
	a sh:NodeShape ;
	sh:property [
		sh:path foaf:name ;
		sh:datatype xsd:string ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
	] ;
	sh:property [
		sh:path foaf:mbox ;
		sh:nodeKind sh:IRI ;
		sh:minCount 1 ;
	] .
	
	
ex:issue1 a ex:Issue ;
  ex:state ex:assigned ;
  ex:reportedBy ex:john .

ex:john foaf:name "John" ;
   foaf:mbox <mailto:john@gmail.com> .  